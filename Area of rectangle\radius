import java.util.*;
public class Main{
    public static void main(String args[]){
      Scanner sc=new Scanner(System.in);
      int a=sc.nextInt();
      int b=sc.nextInt();
      int c=sc.nextInt();
      double d=2*3.14*a;
      double e=2*(b+c);
      double f=(d>e)?d:e;
      System.out.printf("%.2f",f);
    }
}
      
